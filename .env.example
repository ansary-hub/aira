# Application Settings
APP_NAME=A.I.R.A.
APP_VERSION=1.0.0
DEBUG=false

# API Settings
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./aira.db

# Google Gemini Configuration
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_SENTIMENT_MODEL=gemini-2.5-pro
GEMINI_REACT_MODEL=gemini-3-pro-preview

# News API Configuration
NEWS_API_KEY=your_news_api_key_here
NEWS_API_BASE_URL=https://newsapi.org/v2

# Monitoring Configuration
# MONITOR_INTERVAL_HOURS: Default interval for monitoring if not specified in request (in hours, supports decimals e.g., 0.1 = 6 minutes)
MONITOR_INTERVAL_HOURS=24
# MONITOR_MIN_ARTICLES: Minimum new articles required to trigger a proactive alert
MONITOR_MIN_ARTICLES=5

# Analysis Configuration (defaults for /analyze endpoint)
# ANALYSIS_DAYS_BACK: How many days back to fetch news articles
ANALYSIS_DAYS_BACK=7
# ANALYSIS_MAX_ARTICLES: Maximum number of articles to fetch for analysis
ANALYSIS_MAX_ARTICLES=5
